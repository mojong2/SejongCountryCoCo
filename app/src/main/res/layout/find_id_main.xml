<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context=".FindIdActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:layout_width="14dp"
            android:layout_height="76dp" />
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="83dp"
            android:background="@drawable/back_button" />

        <View
            android:layout_width="65dp"
            android:layout_height="90dp" />
        <ImageView
            android:layout_width="180dp"
            android:layout_height="204dp"
            android:background="@drawable/login_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"

        >

        <View
            android:layout_width="13dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:text="회원정보에 등록한 휴대전화로 인증번호 받기."
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/empty_view"
            android:layout_width="11dp"
            android:layout_height="46dp" />

        <View
            android:id="@+id/empty_view1"
            android:layout_width="20dp"
            android:layout_height="40dp" />

        <View
            android:layout_width="395dp"
            android:layout_height="67dp"
            android:layout_toRightOf="@id/empty_view"
            android:background="@drawable/line3" />

        <EditText
            android:id="@+id/text1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/empty_view1"
            android:hint="이름"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:textSize="30dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/empty_view5"
            android:layout_width="11dp"
            android:layout_height="46dp" />

        <View
            android:id="@+id/empty_view6"
            android:layout_width="20dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/empty_view7"
            android:layout_width="330dp"
            android:layout_height="67dp"
            android:layout_toRightOf="@id/empty_view5"
            android:background="@drawable/line3" />

        <EditText
            android:id="@+id/text3"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/empty_view6"
            android:background="@null"
            android:hint="휴대폰 번호"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:textSize="30dp" />

        <Button
            android:layout_width="77dp"
            android:layout_height="67dp"
            android:layout_toRightOf="@id/empty_view7"
            android:background="@drawable/line3"
            android:text="인증"
            android:textSize="19dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/empty_view8"
            android:layout_width="11dp"
            android:layout_height="46dp" />

        <View
            android:id="@+id/empty_view9"
            android:layout_width="20dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/empty_view10"
            android:layout_width="395dp"
            android:layout_height="67dp"
            android:layout_toRightOf="@id/empty_view8"
            android:background="@drawable/line3" />

        <EditText
            android:id="@+id/text2"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/empty_view9"
            android:background="@null"
            android:hint="인증번호 숫자 6자리"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:textSize="30dp" />

    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="41dp" />

    <ImageView
        android:id="@+id/loginbutton"
        android:layout_width="325dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:background="@drawable/findpw_checkbutton" />

    <View
        android:layout_width="match_parent"
        android:layout_height="17dp" />

</LinearLayout>